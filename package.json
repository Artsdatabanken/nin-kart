{
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "bugs": {
    "url": "https://github.com/Artsdatabanken/nin-kart-frontend/issues"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.2",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.29",
    "@sentry/browser": "^5.7.1",
    "classnames": "^2.2.6",
    "eslint-plugin-react-hooks": "^2.2.0",
    "leaflet": "^1.5.1",
    "markdown-to-jsx": "^6.10.3",
    "node-sass": "^4.13.0",
    "pixl-xml": "^1.0.13",
    "react": "^16.11.0",
    "react-color": "^2.17.3",
    "react-dom": "^16.11.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-use": "^12.10.0",
    "recompose": "^0.30.0",
    "tangram": "^0.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "babel-loader": "8.0.6",
    "coveralls": "^3.0.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "plugins": [
      "prettier",
      "jsx-a11y",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": 2,
      "react-hooks/rules-of-hooks": 2,
      "jsx-a11y/alt-text": 1
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ]
  },
  "license": "MIT",
  "name": "nin-kart-frontend",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build-storybook": "build-storybook -s public -o build/storybook",
    "eject": "react-scripts eject",
    "deploy": "scp -r build/* grunnkart@hydra:~/forvaltningsportal/",
    "report-coverage": "coveralls < coverage/lcov.info",
    "start": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "test": "react-scripts test --coverage",
    "test:watch": "react-scripts test --watch"
  },
  "version": "0.2.0"
}
